<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
        <!-- Pressed = tapped; NOT selected = brighly colored (normal) -->
    <item android:drawable="@drawable/op_button_pressed" 
          android:state_selected="true" 
          android:state_pressed="true"/>
    <item android:drawable="@drawable/eq_button_pressed" 
          android:state_selected="false"
          android:state_pressed="true" />
    <item android:drawable="@drawable/op_button_normal"
          android:state_selected="true"
          android:state_pressed="false"/>
    <item android:drawable="@drawable/eq_button_normal" 
          android:state_selected="false"
          android:state_pressed="false" />
</selector>
