<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="NumButton" parent="CalcButton">
        <item name="android:background">@drawable/num_button</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="OpButton" parent="CalcButton">
        <item name="android:background">@drawable/op_button</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="EqualsButton" parent="CalcButton">
        <item name="android:background">@drawable/eq_button_shape</item>
        <item name="android:textColor">@drawable/eq_button_text_color</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ConvertButton" parent="CalcButton">
        <item name="android:background">@drawable/conv_button</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:textSize">20sp</item>
    <!--     <item name="android:hint">@string/conv_button_hint</item> -->
    </style>

    <style name="SmallOpButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/op_button</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:textSize">30sp</item>
    </style>    

    <style name="ResultText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/result_textview</item>
        <item name="android:textColor">@drawable/result_textview_text_color</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>